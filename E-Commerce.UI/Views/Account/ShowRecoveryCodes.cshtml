@model ShowRecoveryCodesDTO
@{
    ViewData["Title"] = "Recovery Codes";
    if (Model.ReturnUrl != null)
    {
        TempData["2FA"] = "1";
    }
}

<div class="auth-card" style="max-width: 600px;">
    <div class="auth-header">
        <h1><i class="fas fa-key me-2"></i>Recovery Codes</h1>
        <p>Save these codes in a secure location</p>
    </div>

    <div class="auth-body">
        <div class="alert alert-warning">
            <i class="fas fa-exclamation-triangle me-2"></i>
            <strong>Important!</strong> Store these recovery codes in a safe place.
            You can use them to access your account if you lose your authenticator device.
        </div>

        <div class="recovery-codes">
            <h6>Your Recovery Codes:</h6>
            @foreach (var code in Model.RecoveryCodes)
            {
                <span class="code">@code</span>
            }
        </div>

        <div class="alert alert-info">
            <i class="fas fa-info-circle me-2"></i>
            <ul class="mb-0">
                <li>Each code can only be used once</li>
                <li>Keep them private and secure</li>
                <li>You can generate new codes anytime from your account settings</li>
            </ul>
        </div>

        <div class="d-grid gap-2">
            <button onclick="window.print()" class="btn btn-outline-primary">
                <i class="fas fa-print me-2"></i>Print Codes
            </button>
            <a href="@Model.ReturnUrl" class="btn btn-primary">
                <i class="fas fa-check me-2"></i>I've Saved These Codes
            </a>
        </div>
    </div>
</div>