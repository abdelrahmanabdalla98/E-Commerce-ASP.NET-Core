@model TwoFactorDTO
@{
    ViewData["Title"] = "Two-Factor Authentication";
}

<div class="auth-card">
    <div class="auth-header">
        <h1><i class="fas fa-shield-alt me-2"></i>Two-Factor Authentication</h1>
        <p>Enter your authenticator code</p>
    </div>

    <div class="auth-body">
        @if (ViewData.ModelState.ErrorCount > 0)
        {
            <div class="alert alert-danger">
                <i class="fas fa-exclamation-triangle me-2"></i>
                <asp-validation-summary />
            </div>
        }

        <div class="alert alert-info">
            <i class="fas fa-mobile-alt me-2"></i>
            Open your authenticator app and enter the 6-digit code.
        </div>

        <form asp-action="TwoFactorAuthentication" method="post" novalidate>
            <input asp-for="ReturnUrl" type="hidden" />

            <div class="form-floating">
                <input asp-for="Code" class="form-control text-center" placeholder="000000"
                       autocomplete="one-time-code" maxlength="6" style="font-size: 1.5rem; letter-spacing: 0.5rem;" />
                <label asp-for="Code"></label>
                <span asp-validation-for="Code" class="text-danger small"></span>
            </div>

            <div class="form-check">
                <input asp-for="RememberMachine" class="form-check-input" />
                <label asp-for="RememberMachine" class="form-check-label">
                    Remember this machine for 30 days
                </label>
            </div>

            <button type="submit" class="btn btn-primary w-100 mb-3">
                <i class="fas fa-check me-2"></i>Verify Code
            </button>
        </form>
    </div>

    <div class="auth-links">
        <p class="mb-0">
            <a asp-action="Login" class="text-muted">
                <i class="fas fa-arrow-left me-1"></i>Back to login
            </a>
        </p>
    </div>
</div>