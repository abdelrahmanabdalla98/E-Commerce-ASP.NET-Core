@model EmailSentDTO
@{
    ViewData["Title"] = "Email Sent";
}

<div class="auth-card">
    <div class="auth-header">
        <h1><i class="fas fa-paper-plane me-2"></i>Email Sent</h1>
        <p>Check your inbox</p>
    </div>

    <div class="auth-body">
        <div class="status-message">
            <i class="fas fa-envelope status-icon info-icon"></i>
            <h3>Email Sent</h3>
            <p class="text-muted mb-4">@Model.Message</p>

            <div class="alert alert-info">
                <i class="fas fa-info-circle me-2"></i>
                <strong>Email sent to:</strong> @Model.Email
            </div>
        </div>
    </div>

    <div class="auth-links">
        <a asp-action="Login" class="btn btn-outline-primary">
            <i class="fas fa-sign-in-alt me-2"></i>Go to Login
        </a>
    </div>
</div>