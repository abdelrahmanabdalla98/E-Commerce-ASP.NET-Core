@model EmailSentDTO
@{
    ViewData["Title"] = "Email Confirmed";
}

<div class="auth-card">
    <div class="auth-header">
        <h1><i class="fas fa-check-circle me-2"></i>Email Confirmed</h1>
        <p>Your account is now active</p>
    </div>

    <div class="auth-body">
        <div class="status-message">
            <i class="fas fa-check-circle status-icon success-icon"></i>
            <h3>Success!</h3>
            <p class="text-muted mb-4">
                Your email address <strong>@Model.Email</strong> has been confirmed successfully.
                You can now sign in to your account.
            </p>
        </div>
    </div>

    <div class="auth-links">
        <a asp-action="Login" class="btn btn-primary text-white">
            <i class="fas fa-sign-in-alt me-2"></i>Sign In Now
        </a>
    </div>
</div>
