@{
    ViewData["Title"] = "Account Locked";
}

<div class="auth-card">
    <div class="auth-header">
        <h1><i class="fas fa-lock me-2"></i>Account Locked</h1>
        <p>Too many failed attempts</p>
    </div>

    <div class="auth-body">
        <div class="status-message">
            <i class="fas fa-exclamation-triangle status-icon error-icon"></i>
            <h3>Account Temporarily Locked</h3>
            <p class="text-muted mb-4">
                Your account has been locked due to too many failed login attempts.
                Please try again later or reset your password.
            </p>

            <div class="alert alert-warning">
                <i class="fas fa-clock me-2"></i>
                <strong>Wait time:</strong> Your account will be automatically unlocked after a brief waiting period.
            </div>
        </div>
    </div>

    <div class="auth-links">
        <div class="d-grid gap-2">
            <a asp-action="ForgotPassword" class="btn btn-primary">
                <i class="fas fa-key me-2"></i>Reset Password
            </a>
            <a asp-action="Login" class="btn btn-outline-primary">
                <i class="fas fa-arrow-left me-2"></i>Back to Login
            </a>
        </div>
    </div>
</div>