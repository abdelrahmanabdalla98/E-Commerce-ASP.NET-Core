@{
    ViewData["Title"] = "Password Reset Complete";
}

<div class="auth-card">
    <div class="auth-header">
        <h1><i class="fas fa-check-circle me-2"></i>Password Reset</h1>
        <p>Your password has been changed</p>
    </div>

    <div class="auth-body">
        <div class="status-message">
            <i class="fas fa-check-circle status-icon success-icon"></i>
            <h3>Success!</h3>
            <p class="text-muted mb-4">
                Your password has been reset successfully. You can now sign in with your new password.
            </p>

            <div class="alert alert-success">
                <i class="fas fa-shield-alt me-2"></i>
                <strong>Security tip:</strong> Consider enabling two-factor authentication to better protect your account.
            </div>
        </div>
    </div>

    <div class="auth-links">
        <a asp-action="Login" class="btn btn-primary">
            <i class="fas fa-sign-in-alt me-2"></i>Sign In Now
        </a>
    </div>
</div>