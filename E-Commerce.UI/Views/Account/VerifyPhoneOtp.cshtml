@model PhoneDTO
@{
    ViewData["Title"] = "Verify OTP";
}

<div class="auth-card">
    <div class="auth-header">
        <i class="fas fa-mobile-alt" style="font-size: 2.5rem; margin-bottom: 1rem; opacity: 0.9;"></i>
        <h1>Verify OTP</h1>
        <p>Enter the 6-digit code sent to <strong>@Model.PhoneNumber</strong></p>
    </div>

    <div class="auth-body">
        @if (TempData["StatusMessage"] != null)
        {
            <div class="alert alert-success" role="alert">
                <i class="fas fa-check-circle me-2"></i>
                @TempData["StatusMessage"]
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger" role="alert">
                <i class="fas fa-exclamation-triangle me-2"></i>
                @TempData["ErrorMessage"]
            </div>
        }

        <div asp-validation-summary="All" class="alert alert-danger" role="alert" style="display: none;"></div>

        <form id="otpForm" asp-action="VerifyPhoneOtp" method="post">
            <input asp-for="PhoneNumber" type="hidden" />
            <input asp-for="ReturnUrl" type="hidden" />
            
            <div class="otp-input-container">
                <label class="form-label">
                    <i class="fas fa-key me-2"></i>Enter OTP Code
                </label>
                <div class="otp-inputs">
                    <input type="text" class="otp-digit" maxlength="1" data-index="0" />
                    <input type="text" class="otp-digit" maxlength="1" data-index="1" />
                    <input type="text" class="otp-digit" maxlength="1" data-index="2" />
                    <input type="text" class="otp-digit" maxlength="1" data-index="3" />
                    <input type="text" class="otp-digit" maxlength="1" data-index="4" />
                    <input type="text" class="otp-digit" maxlength="1" data-index="5" />
                </div>
                <input asp-for="OtpCode" type="hidden" id="hiddenOtp" />
                <span asp-validation-for="OtpCode" class="text-danger"></span>
            </div>

            <div class="countdown-container">
                <div class="countdown-display">
                    <i class="fas fa-clock me-2"></i>
                    <span>Code expires in <strong id="countdown">05:00</strong></span>
                </div>
            </div>

            <button type="submit" class="btn btn-primary w-100" id="verifyBtn">
                <span class="btn-text">
                    <i class="fas fa-check me-2"></i>Verify Code
                </span>
                <span class="loading-content" style="display: none;">
                    <span class="loading-spinner"></span>Verifying...
                </span>
            </button>
        </form>

        <div class="resend-section">
            <p class="text-center mb-3">Didn't receive the code?</p>
            <form asp-action="ResendPhoneOtp" method="post" class="d-inline">
                <input asp-for="PhoneNumber" type="hidden" />
                <input asp-for="ReturnUrl" type="hidden" />
                <button type="submit" class="btn btn-outline-primary w-100" id="resendBtn">
                    <span class="btn-text">
                        <i class="fas fa-redo me-2"></i>Resend Code
                    </span>
                    <span class="loading-content" style="display: none;">
                        <span class="loading-spinner"></span>Sending...
                    </span>
                </button>
            </form>
        </div>

        <div class="help-section">
            <div class="help-item">
                <i class="fas fa-question-circle"></i>
                <div>
                    <strong>Having trouble?</strong>
                    <p>Make sure your phone has signal and try resending the code</p>
                </div>
            </div>
        </div>
    </div>

    <div class="auth-links">
        <a asp-action="PhoneConfirmation" asp-route-returnUrl="@Model.ReturnUrl">
            <i class="fas fa-arrow-left me-1"></i>Change Phone Number
        </a>
        @if (!string.IsNullOrEmpty(Model.ReturnUrl))
        {
            <span class="mx-2">|</span>
            <a href="@Model.ReturnUrl">Skip for now</a>
        }
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const otpInputs = document.querySelectorAll('.otp-digit');
            const hiddenOtpInput = document.getElementById('hiddenOtp');
            const form = document.getElementById('otpForm');
            const verifyBtn = document.getElementById('verifyBtn');
            const resendBtn = document.getElementById('resendBtn');
            const countdownElement = document.getElementById('countdown');

            // Initialize countdown (5 minutes)
            let timeLeft = 5 * 60;
            const countdownInterval = setInterval(function() {
                const minutes = Math.floor(timeLeft / 60);
                const seconds = timeLeft % 60;
                countdownElement.textContent = `${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
                
                if (timeLeft <= 0) {
                    clearInterval(countdownInterval);
                    countdownElement.textContent = 'Expired';
                    countdownElement.parentElement.innerHTML = '<i class="fas fa-exclamation-triangle me-2"></i><span class="text-danger">Code has expired</span>';
                }
                timeLeft--;
            }, 1000);

            // OTP input handling
            otpInputs.forEach((input, index) => {
                input.addEventListener('input', function(e) {
                    const value = e.target.value;
                    
                    // Only allow numbers
                    if (!/^\d*$/.test(value)) {
                        e.target.value = '';
                        return;
                    }

                    // Move to next input
                    if (value && index < otpInputs.length - 1) {
                        otpInputs[index + 1].focus();
                    }

                    updateHiddenInput();
                });

                input.addEventListener('keydown', function(e) {
                    // Handle backspace
                    if (e.key === 'Backspace' && !e.target.value && index > 0) {
                        otpInputs[index - 1].focus();
                    }
                    
                    // Handle paste
                    if (e.ctrlKey && e.key === 'v') {
                        e.preventDefault();
                        navigator.clipboard.readText().then(text => {
                            const digits = text.replace(/\D/g, '').slice(0, 6);
                            for (let i = 0; i < digits.length && i < otpInputs.length; i++) {
                                otpInputs[i].value = digits[i];
                            }
                            updateHiddenInput();
                            if (digits.length === 6) {
                                otpInputs[5].focus();
                            }
                        });
                    }
                });

                input.addEventListener('focus', function() {
                    e.target.select();
                });
            });

            function updateHiddenInput() {
                const otp = Array.from(otpInputs).map(input => input.value).join('');
                hiddenOtpInput.value = otp;
                
                // Auto-submit when all 6 digits are entered
                if (otp.length === 6) {
                    setTimeout(() => {
                        form.submit();
                    }, 500);
                }
            }

            // Form submission handling
            form.addEventListener('submit', function(e) {
                const btnText = verifyBtn.querySelector('.btn-text');
                const loadingContent = verifyBtn.querySelector('.loading-content');
                
                btnText.style.display = 'none';
                loadingContent.style.display = 'inline-flex';
                verifyBtn.disabled = true;

                setTimeout(() => {
                    btnText.style.display = 'inline-flex';
                    loadingContent.style.display = 'none';
                    verifyBtn.disabled = false;
                }, 3000);
            });

            // Resend button handling
            resendBtn.parentElement.addEventListener('submit', function(e) {
                const btnText = resendBtn.querySelector('.btn-text');
                const loadingContent = resendBtn.querySelector('.loading-content');
                
                btnText.style.display = 'none';
                loadingContent.style.display = 'inline-flex';
                resendBtn.disabled = true;

                setTimeout(() => {
                    btnText.style.display = 'inline-flex';
                    loadingContent.style.display = 'none';
                    resendBtn.disabled = false;
                }, 3000);
            });

            // Focus first input
            otpInputs[0].focus();

            // Show validation summary if there are errors
            const validationSummary = document.querySelector('[asp-validation-summary]');
            if (validationSummary && validationSummary.innerHTML.trim()) {
                validationSummary.style.display = 'block';
            }
        });
    </script>
}

<link href="~/css/verifyphone.css" rel="stylesheet" />