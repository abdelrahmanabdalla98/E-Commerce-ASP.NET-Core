@{
    ViewData["Title"] = "Password Reset Email Sent";
}

<div class="auth-card">
    <div class="auth-header">
        <h1><i class="fas fa-envelope me-2"></i>Reset Link Sent</h1>
        <p>Check your email for instructions</p>
    </div>

    <div class="auth-body">
        <div class="status-message">
            <i class="fas fa-envelope-open status-icon info-icon"></i>
            <h3>Email Sent</h3>
            <p class="text-muted mb-4">
                If an account with that email exists, we've sent you a password reset link.
                Please check your email and follow the instructions.
            </p>

            <div class="alert alert-info">
                <i class="fas fa-info-circle me-2"></i>
                <strong>Didn't receive the email?</strong> Check your spam folder or wait a few minutes before trying again.
            </div>
        </div>
    </div>

    <div class="auth-links">
        <a asp-action="Login" class="btn btn-outline-primary">
            <i class="fas fa-sign-in-alt me-2"></i>Back to Login
        </a>
    </div>
</div>