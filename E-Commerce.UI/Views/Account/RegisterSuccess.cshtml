@model RegisterSuccessDTO
@{
    ViewData["Title"] = "Registration Successful";
}

<div class="auth-card">
    <div class="auth-header">
        <h1><i class="fas fa-check-circle me-2"></i>Registration Successful</h1>
        <p>Welcome to our platform!</p>
    </div>

    <div class="auth-body">
        <div class="status-message">
            <i class="fas fa-envelope-open status-icon success-icon"></i>
            <h3>Check Your Email</h3>
            <p class="text-muted mb-4">
                We've sent a confirmation email to <strong>@Model.Email</strong>.
                Please click the link in the email to activate your account.
            </p>

            <div class="alert alert-info">
                <i class="fas fa-info-circle me-2"></i>
                <strong>Didn't receive the email?</strong> Check your spam folder or
                <a asp-action="ResendEmailConfirmation" class="alert-link">resend confirmation email</a>
            </div>
        </div>
    </div>

    <div class="auth-links">
        <a asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-outline-primary">
            <i class="fas fa-sign-in-alt me-2"></i>Go to Login
        </a>
    </div>
</div>