    //         }
    //     });
    //     // Your code here
    // });
    document.getElementById('cl').addEventListener('click', function () {
        window.history.back();
    });
    // section for category
    document.getElementById('category').addEventListener('change', function () {
        var selected = this.value;
        
        if (selected=='0') {
            $('#sub1').remove();
            return;
        }
        $.ajax({
            url: "/Base/Categories",
            type: "POST", // or "POST"
