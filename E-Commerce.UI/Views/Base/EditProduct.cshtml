            if (!selectedColor) {
                document.getElementById('colorPicker').value = '#ff0000';
                document.getElementById('colorName').value = '';
            }
        }
    }
        var colorValue = "@(Model.stock.Color ?? "")";
        if (colorValue !== "") {
            document.getElementById('colorPicker').value = "@((Model.stock.Color ?? "").Split(':').Last())";
