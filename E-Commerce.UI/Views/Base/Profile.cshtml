@{
    ViewData["Title"] = "Profile Management";
}


<link href="~/css/profilecss.css" rel="stylesheet" />
<div class="container mt-4 mb-5">
    <!-- Profile Header -->
    <div class="profile-section">
        <div class="profile-header breadcumb-wrapper background-image" style="background-image: url(&quot;/assets/img/bg/breadcumb-bg.jpg&quot;);">
            <div class="profile-avatar">
                <img src="/assets/img/icon/user.svg" alt="Profile Picture" id="profileImage">
                <div class="avatar-upload" onclick="document.getElementById('avatarInput').click()">
                    <i class="fas fa-camera"></i>
                </div>
                <input type="file" id="avatarInput" accept="image/*" style="display: none;">
            </div>
            <h2 class="mb-2">Abdelrahman Mohamed</h2>
            <p class="mb-0">Premium Customer</p>
        </div>
    </div>

    <!-- Profile Stats -->
    <div class="profile-stats">
        <div class="stat-card">
            <div class="stat-number">24</div>
            <div class="stat-label">Total Orders</div>
        </div>
        <div class="stat-card">
            <div class="stat-number">$2,450</div>
            <div class="stat-label">Total Spent</div>
        </div>
        <div class="stat-card">
            <div class="stat-number">5</div>
            <div class="stat-label">Wishlist Items</div>
        </div>
        <div class="stat-card">
            <div class="stat-number">4.8★</div>
            <div class="stat-label">Customer Rating</div>
        </div>
    </div>

    <!-- Navigation Tabs -->
    <div class="profile-section">
        <div class="profile-content">
            <div class="nav-tabs">
                <button class="nav-tab active" data-tab="personal">Personal Information</button>
                <button class="nav-tab" data-tab="addresses">Addresses</button>
                <button class="nav-tab" data-tab="orders">Order History</button>
                <button class="nav-tab" data-tab="security">Security</button>
            </div>

            <!-- Personal Information Tab -->
            <div class="tab-content active" id="personal">
                <h3 class="section-title">Personal Information</h3>
                <form>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label">First Name</label>
                                <input type="text" class="form-control" value="Abdelrahman" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label">Last Name</label>
                                <input type="text" class="form-control" value="Mohamed" required>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label">Email Address</label>
                                <input type="email" class="form-control" value="abdelrahman@example.com" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label">Phone Number</label>
                                <input type="tel" class="form-control" value="+20-01068304347" required>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label">Date of Birth</label>
                                <input type="date" class="form-control" value="1990-05-15">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label">Gender</label>
                                <select class="form-control">
                                    <option value="male" selected>Male</option>
                                    <option value="female">Female</option>
                                    <option value="prefer-not-to-say">Prefer not to say</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Bio</label>
                        <textarea class="form-control" rows="4" placeholder="Tell us about yourself...">Tech enthusiast and gadget lover. Always looking for the latest electronics and innovative products.</textarea>
                    </div>
                    <button type="submit" class="btn-profile">Update Profile</button>
                    <button type="button" class="btn-secondary">Cancel</button>
                </form>
            </div>

            <!-- Addresses Tab -->
            <div class="tab-content" id="addresses">
                <h3 class="section-title">My Addresses</h3>
                
                <div class="address-card default">
                    <div class="default-badge">Default</div>
                    <h5>Home Address</h5>
                    <p class="mb-2"><strong>Abdelrahman Mohamed</strong></p>
                    <p class="mb-2">123 Main Street, Apt 4B</p>
                    <p class="mb-2">Giza, Giza Governorate, 12345</p>
                    <p class="mb-3">Egypt</p>
                    <button class="btn-profile btn-sm">Edit</button>
                    <button class="btn-secondary btn-sm">Delete</button>
                </div>

                <div class="address-card">
                    <h5>Work Address</h5>
                    <p class="mb-2"><strong>Abdelrahman Mohamed</strong></p>
                    <p class="mb-2">456 Business District</p>
                    <p class="mb-2">Cairo, Cairo Governorate, 11511</p>
                    <p class="mb-3">Egypt</p>
                    <button class="btn-profile btn-sm">Edit</button>
                    <button class="btn-secondary btn-sm">Delete</button>
                    <button class="btn-secondary btn-sm">Set as Default</button>
                </div>

                <button class="btn-profile mt-3">
                    <i class="fas fa-plus"></i> Add New Address
                </button>
            </div>

            <!-- Orders Tab -->
            <div class="tab-content" id="orders">
                <h3 class="section-title">Order History</h3>
                
                <div class="order-item">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5 class="mb-0">Order #EG-2025-001</h5>
                        <span class="order-status status-completed">Completed</span>
                    </div>
                    <div class="row">
                        <div class="col-md-8">
                            <p class="mb-2"><strong>Items:</strong> Apple iPhone 14 Pro Max, Samsung Galaxy Watch7</p>
                            <p class="mb-2"><strong>Order Date:</strong> June 5, 2025</p>
                            <p class="mb-2"><strong>Delivery Date:</strong> June 8, 2025</p>
                        </div>
                        <div class="col-md-4 text-md-end">
                            <p class="mb-2"><strong>Total: $1,690.00</strong></p>
                            <button class="btn-profile btn-sm">View Details</button>
                        </div>
                    </div>
                </div>

                <div class="order-item">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5 class="mb-0">Order #EG-2025-002</h5>
                        <span class="order-status status-pending">Processing</span>
                    </div>
                    <div class="row">
                        <div class="col-md-8">
                            <p class="mb-2"><strong>Items:</strong> Apple iPad Air 4, Fujifilm Instax Mini 12</p>
                            <p class="mb-2"><strong>Order Date:</strong> June 8, 2025</p>
                            <p class="mb-2"><strong>Expected Delivery:</strong> June 12, 2025</p>
                        </div>
                        <div class="col-md-4 text-md-end">
                            <p class="mb-2"><strong>Total: $1,890.00</strong></p>
                            <button class="btn-profile btn-sm">Track Order</button>
                        </div>
                    </div>
                </div>

                <div class="order-item">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5 class="mb-0">Order #EG-2025-003</h5>
                        <span class="order-status status-cancelled">Cancelled</span>
                    </div>
                    <div class="row">
                        <div class="col-md-8">
                            <p class="mb-2"><strong>Items:</strong> Xiaomi Redmi Note 12 Pro 5G</p>
                            <p class="mb-2"><strong>Order Date:</strong> June 3, 2025</p>
                            <p class="mb-2"><strong>Cancelled Date:</strong> June 4, 2025</p>
                        </div>
                        <div class="col-md-4 text-md-end">
                            <p class="mb-2"><strong>Refund: $595.00</strong></p>
                            <button class="btn-secondary btn-sm">Reorder</button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Security Tab -->
            <div class="tab-content" id="security">
                <h3 class="section-title">Security Settings</h3>
                
                <div class="security-item">
                    <div>
                        <h6 class="mb-1">Change Password</h6>
                        <p class="mb-0 text-muted">Update your password to keep your account secure</p>
                    </div>
                    <button class="btn-profile btn-sm">Change Password</button>
                </div>

                <div class="security-item">
                    <div>
                        <h6 class="mb-1">Two-Factor Authentication</h6>
                        <p class="mb-0 text-muted">Add an extra layer of security to your account</p>
                    </div>
                    <label class="switch">
                        <input type="checkbox">
                        <span class="slider"></span>
                    </label>
                </div>

                <div class="security-item">
                    <div>
                        <h6 class="mb-1">Email Notifications</h6>
                        <p class="mb-0 text-muted">Receive security alerts via email</p>
                    </div>
                    <label class="switch">
                        <input type="checkbox" checked>
                        <span class="slider"></span>
                    </label>
                </div>

                <div class="security-item">
                    <div>
                        <h6 class="mb-1">Login Alerts</h6>
                        <p class="mb-0 text-muted">Get notified when someone logs into your account</p>
                    </div>
                    <label class="switch">
                        <input type="checkbox" checked>
                        <span class="slider"></span>
                    </label>
                </div>

                <div class="security-item">
                    <div>
                        <h6 class="mb-1">Active Sessions</h6>
                        <p class="mb-0 text-muted">Manage your active login sessions</p>
                    </div>
                    <button class="btn-secondary btn-sm">View Sessions</button>
                </div>

                <div class="security-item">
                    <div>
                        <h6 class="mb-1">Download Data</h6>
                        <p class="mb-0 text-muted">Download a copy of your personal data</p>
                    </div>
                    <button class="btn-secondary btn-sm">Download</button>
                </div>

                <div class="security-item">
                    <div>
                        <h6 class="mb-1 text-danger">Delete Account</h6>
                        <p class="mb-0 text-muted">Permanently delete your account and all data</p>
                    </div>
                    <button class="btn btn-danger btn-sm">Delete Account</button>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Tab functionality
    document.querySelectorAll('.nav-tab').forEach(tab => {
        tab.addEventListener('click', function() {
            // Remove active class from all tabs and content
            document.querySelectorAll('.nav-tab').forEach(t => t.classList.remove('active'));
            document.querySelectorAll('.tab-content').forEach(content => content.classList.remove('active'));
            
            // Add active class to clicked tab
            this.classList.add('active');
            
            // Show corresponding content
            document.getElementById(this.dataset.tab).classList.add('active');
        });
    });

    // Avatar upload functionality
    document.getElementById('avatarInput').addEventListener('change', function(e) {
        const file = e.target.files[0];
        if (file) {
            const reader = new FileReader();
            reader.onload = function(e) {
                document.getElementById('profileImage').src = e.target.result;
            };
            reader.readAsDataURL(file);
        }
    });

    // Form validation and submission
    document.querySelectorAll('form').forEach(form => {
        form.addEventListener('submit', function(e) {
            e.preventDefault();
            // Add your form submission logic here
            alert('Profile updated successfully!');
        });
    });

    // Switch toggle functionality
    document.querySelectorAll('.switch input').forEach(switchInput => {
        switchInput.addEventListener('change', function() {
            const setting = this.closest('.security-item').querySelector('h6').textContent;
            const status = this.checked ? 'enabled' : 'disabled';
            console.log(`${setting} ${status}`);
        });
    });
</script>